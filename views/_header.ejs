<header>
  <style>
    /* navbar */

    .navbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px;
      background-color: black;
      color: white;
    }

    .nav-links a {
      color: white;
    }

    .logo {
      font-size: 32px;
    }

    .menu {
      display: flex;
      gap: 1em;
      font-size: 18px;
    }

    .menu li:hover {
      background-color: #ff7300;
      border-radius: 5px;
      transition: 0.3s ease;
    }

    .menu li {
      padding: 5px 14px;
    }

    .services {
      position: relative;
    }

    .dropdown {
      background-color: black;
      padding: 1em 0;
      position: absolute;
      display: none;
      border-radius: 8px;
      top: 35px;
    }

    .dropdown li + li {
      margin: 10px;
    }

    .dropdown li {
      padding: 0.5em 1em;
      width: 8em;
      text-align: center;
    }

    .dropdown li:hover {
      background-color: #ff7300;
    }

    .services:hover .dropdown {
      display: block;
    }
  </style>
  <link rel="stylesheet" href="/css/header.css" />

  <nav class="navbar">
    <div class="logo"></div>
    <ul class="nav-links">
      <div class="menu">
        <li><a href="/">Home</a></li>
        <li><a href="#">Questions</a></li>
        <li class="services">
          <a href="#">services</a>
          <ul class="dropdown">
            <li><a href="#">Dropdown 1</a></li>
            <li><a href="#">Dropdown 2</a></li>
            <li><a href="#">Dropdown 3</a></li>
          </ul>
        </li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact us</a></li>

        <% if(locals.user){ %>
        <li>
          <!--<a class="a_nav" href="/users/profile/">
          <%=user.name %> 
          </a>  -->
          <a href="/users/profile/<%=user.id %>"><%= user.name %> </a>
        </li>
        <li>
          <a href="/users/sign-out">Sign Out </a>
        </li>

        <% }else{ %>
        <li>
          <a href="/users/sign-in">Sign In </a>
        </li>

        <li>
          <a href="/users/sign-up">Sign Up </a>
        </li>

        <% } %>
      </div>
    </ul>
  </nav>

